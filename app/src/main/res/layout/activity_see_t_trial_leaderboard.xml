<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SeeTTrialLeaderboard">

    <TextView
            android:text="@string/lBoardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/leaderboardHeader2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textAlignment="center"
            android:layout_marginTop="24dp"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/leaderboardHeader2" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp"
            android:scrollbarThumbVertical="@color/colorPrimary">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/llayoutres"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>